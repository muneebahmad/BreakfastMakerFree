<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#000033"
                android:angle="270" />
            <stroke
                 />
            <corners
                android:topRightRadius="10sp"
                android:topLeftRadius="10sp"  />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
             <gradient
                android:startColor="#000000"
                android:endColor="#ff8c00"
                android:angle="270" />
                
            <stroke
                android:width="2dp"
                android:color="#dcdcdc" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#FFD700"
                android:centerColor="#FF0000"
                android:endColor="#330000"
                android:angle="270" />
            <stroke
                android:color="#1e90ff"
                android:width="10sp"
                 />
            <corners
                android:bottomRightRadius="25sp"
                android:bottomLeftRadius="25sp"
                android:topLeftRadius="25sp"
                android:topRightRadius="25sp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
